[flake8]
max-line-length = 120
ignore =
    E203,  # whitespace before ':' (Black compatibility)
    W503,  # line break before binary operator
    F401,  # unused imports
    F841   # unused variables
exclude =
    .git,
    __pycache__,
    build,
    dist,
    .venv,
    venv

per-file-ignores =
    __init__.py:F401
